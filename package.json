{
  "name": "servise-site",
  "version": "2.1.0",
  "description": "maintenance of uninterrupted and guaranteed power supply systems",
  "main": "index.js",
  "scripts": {
    "watch:scss": "node-sass scss/style.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:scss",
    "compile:scss": "node-sass scss/style.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:scss prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Doomer77/pjparts.git"
  },
  "author": "pj",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Doomer77/pjparts/issues"
  },
  "homepage": "https://github.com/Doomer77/pjparts#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "prettier": "2.4.0"
  },
  "dependencies": {
    "globby": "^12.0.0"
  }
}
